<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDashboard.Views.AreaAdministrativaPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" BackgroundColor="#1E3A8A">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <!-- Botão Voltar -->
            <ImageButton Grid.Column="0"
                        Aspect="Center" 
                        WidthRequest="30"
                        HeightRequest="40"
                        BackgroundColor="Transparent"
                        Clicked="OnBackClicked">
                <ImageButton.Source>
                    <FontImageSource 
                        Glyph="←" 
                        FontFamily="Arial"
                        Size="42" 
                        Color="White"/>
                </ImageButton.Source>
            </ImageButton>

            <!-- Título -->
            <Label Grid.Column="1"
                   Text="Área Administrativa"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"/>

            <!-- Menu -->
            <ImageButton Grid.Column="2"
                        Aspect="Center" 
                        WidthRequest="24"
                        HeightRequest="24"
                        BackgroundColor="Transparent"
                        Clicked="OnMenuClicked">
                <ImageButton.Source>
                    <FontImageSource 
                        Glyph="⋮" 
                        FontFamily="Arial"
                        Size="32" 
                        Color="White"/>
                </ImageButton.Source>
            </ImageButton>
        </Grid>

        <!-- Conteúdo -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="16" Padding="16">

                <!-- Filtro de Unidades -->
                <Frame BorderColor="#E0E0E0" 
                       CornerRadius="8" 
                       Padding="0"
                       HasShadow="False"
                       BackgroundColor="White">
                    <Grid>
                        <Picker ItemsSource="{Binding UnidadesGrupos}"
                                SelectedItem="{Binding UnidadeSelecionada}"
                                Title="Selecionar Unidade/Grupo"
                                TitleColor="#666666"
                                TextColor="#333333"
                                FontSize="16"
                                HeightRequest="50"
                                Margin="15,0,40,0"
                                BackgroundColor="Transparent"/>

                        <Label Text="▼" 
                               FontSize="12" 
                               TextColor="#999999"
                               VerticalOptions="Center"
                               HorizontalOptions="End"
                               Margin="0,0,15,0"
                               InputTransparent="True"/>
                    </Grid>
                </Frame>

                <!-- Contador -->
                <Label x:Name="lblContador"
                       Text="0 usuários cadastrados"
                       FontSize="14"
                       TextColor="#666666"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <!-- Lista de Usuários -->
                <CollectionView ItemsSource="{Binding Usuarios}"
                               SelectionMode="None"
                               x:Name="collectionUsuarios">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="#E0E0E0" 
                                   CornerRadius="8" 
                                   Padding="15"
                                   Margin="0,0,0,12"
                                   HasShadow="False"
                                   BackgroundColor="White">
                                <Grid ColumnDefinitions="*,60,50" 
                                      ColumnSpacing="12"
                                      RowDefinitions="Auto,Auto,Auto">

                                    <!-- Informações do Usuário -->
                                    <VerticalStackLayout Grid.Column="0" 
                                                       Grid.RowSpan="3"
                                                       Spacing="4" 
                                                       VerticalOptions="Center">
                                        <Label Text="{Binding Nome}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#333333"/>

                                        <Label Text="{Binding Email}"
                                               FontSize="14"
                                               TextColor="#666666"/>

                                        <HorizontalStackLayout Spacing="8">
                                            <Frame Padding="8,4"
                                                   BackgroundColor="#E3F2FD"
                                                   BorderColor="Transparent"
                                                   CornerRadius="4"
                                                   HasShadow="False">
                                                <Label Text="{Binding Cargo}"
                                                       FontSize="12"
                                                       TextColor="#1E3A8A"/>
                                            </Frame>

                                            <Frame Padding="8,4"
                                                   BackgroundColor="#F3E5F5"
                                                   BorderColor="Transparent"
                                                   CornerRadius="4"
                                                   HasShadow="False"
                                                   IsVisible="{Binding UnidadeGrupo, Converter={StaticResource IsNotNullConverter}}">
                                                <Label Text="{Binding UnidadeGrupo}"
                                                       FontSize="12"
                                                       TextColor="#7B1FA2"/>
                                            </Frame>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <!-- Avatar -->
                                    <Frame Grid.Column="1"
                                           Grid.RowSpan="3"
                                           BorderColor="Transparent"
                                           BackgroundColor="#E0E0E0"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           CornerRadius="25"
                                           Padding="0"
                                           HasShadow="False"
                                           VerticalOptions="Center">
                                        <Label Text="👤"
                                               FontSize="28"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"/>
                                    </Frame>

                                    <!-- Botão Remover -->
                                    <Button Grid.Column="2"
                                           Grid.RowSpan="3"
                                           Text="🗑️"
                                           FontSize="20"
                                           BackgroundColor="#EF5350"
                                           TextColor="White"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           CornerRadius="25"
                                           Clicked="OnRemoverUsuario"
                                           CommandParameter="{Binding Id}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                    <CollectionView.EmptyView>
                        <VerticalStackLayout HorizontalOptions="Center" 
                                           VerticalOptions="Center"
                                           Margin="0,50">
                            <Label Text="📋"
                                  FontSize="60"
                                  HorizontalOptions="Center"/>
                            <Label Text="Nenhum usuário cadastrado"
                                  FontSize="16"
                                  TextColor="#999999"
                                  HorizontalOptions="Center"
                                  Margin="0,10,0,0"/>
                            <Label Text="Toque em 'Adicionar Usuário' para começar"
                                  FontSize="14"
                                  TextColor="#CCCCCC"
                                  HorizontalOptions="Center"
                                  Margin="0,5,0,0"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Botão Adicionar -->
        <Grid Grid.Row="2" Padding="16">
            <Button Text="➕ Adicionar Usuário"
                    FontSize="16"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="#1E3A8A"
                    HeightRequest="56"
                    CornerRadius="8"
                    Clicked="OnAdicionarClicked"/>
        </Grid>
    </Grid>
</ContentPage>