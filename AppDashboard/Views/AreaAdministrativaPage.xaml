<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDashboard.Views.AreaAdministrativaPage"
             BackgroundColor="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>

        
        <Grid Grid.Row="0" BackgroundColor="#2E4A8B" Padding="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>

            <ImageButton Grid.Column="0"
                        Source="back_arrow.png"
                        BackgroundColor="Transparent"
                        WidthRequest="24"
                        HeightRequest="24"
                        VerticalOptions="Center"
                        Clicked="OnBackClicked"/>

            <Label Grid.Column="1"
                   Text="Área Administrativa"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"/>

            <ImageButton Grid.Column="2"
                        Source="menu_dots.png"
                        BackgroundColor="Transparent"
                        WidthRequest="24"
                        HeightRequest="24"
                        VerticalOptions="Center"
                        Clicked="OnMenuClicked"/>
        </Grid>

        
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="16" Padding="16">

                
                <Border StrokeThickness="1"
                        Stroke="#E0E0E0"
                        BackgroundColor="White"
                        Padding="12"
                        StrokeShape="RoundRectangle 8">
                    <Grid ColumnDefinitions="*,24">
                        <Picker Grid.Column="0"
                                ItemsSource="{Binding UnidadesGrupos}"
                                SelectedItem="{Binding UnidadeSelecionada}"
                                Title="Selecionar Unidade/Grupo"
                                TitleColor="#666666"
                                TextColor="#333333"
                                FontSize="16"
                                BackgroundColor="Transparent"/>

                        <Image Grid.Column="1"
                               Source="dropdown_icon.png"
                               WidthRequest="16"
                               HeightRequest="16"
                               VerticalOptions="Center"/>
                    </Grid>
                </Border>

                
                <CollectionView ItemsSource="{Binding Usuarios}"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border StrokeThickness="1"
                                   Stroke="#E0E0E0"
                                   BackgroundColor="White"
                                   Padding="16"
                                   Margin="0,0,0,12"
                                   StrokeShape="RoundRectangle 8">
                                <Grid ColumnDefinitions="*,60" ColumnSpacing="12">

                                    
                                    <VerticalStackLayout Grid.Column="0" Spacing="4" VerticalOptions="Center">
                                        <Label Text="{Binding Nome}"
                                               FontSize="16"
                                               FontAttributes="Bold"
                                               TextColor="#333333"/>

                                        <Label Text="{Binding Email}"
                                               FontSize="14"
                                               TextColor="#666666"/>

                                        <Label Text="{Binding Cargo}"
                                               FontSize="12"
                                               TextColor="#999999"/>
                                    </VerticalStackLayout>

                                    
                                    <Border Grid.Column="1"
                                           StrokeThickness="0"
                                           BackgroundColor="#E0E0E0"
                                           WidthRequest="50"
                                           HeightRequest="50"
                                           StrokeShape="RoundRectangle 25"
                                           VerticalOptions="Center">
                                        <Image Source="{Binding FotoUrl}"
                                              Aspect="AspectFill"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        
        <Border Grid.Row="2" 
                Padding="16"
                BackgroundColor="Transparent">
            <Button Text="+ Adicionar Usuário"
                    BackgroundColor="#2E4A8B"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="56"
                    CornerRadius="8"
                    Clicked="OnAdicionarClicked"/>
        </Border>
    </Grid>
</ContentPage>